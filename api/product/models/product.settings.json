{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "videos": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "price": {
      "type": "integer"
    },
    "ingredients": {
      "type": "richtext"
    },
    "sku": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "barcode": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "pid": {
      "type": "uid",
      "targetField": "sku"
    },
    "uses": {
      "type": "richtext"
    },
    "warning": {
      "type": "richtext"
    },
    "origin": {
      "type": "string"
    },
    "slides": {
      "type": "dynamiczone",
      "components": [
        "product.slides"
      ]
    },
    "categories": {
      "collection": "category",
      "via": "products",
      "dominant": true
    },
    "collections": {
      "collection": "collection",
      "via": "products",
      "dominant": true
    },
    "details": {
      "type": "richtext"
    },
    "directions": {
      "type": "richtext"
    },
    "expiration": {
      "type": "string"
    },
    "storage": {
      "type": "richtext"
    },
    "volume_ml": {
      "type": "decimal"
    },
    "volume_g": {
      "type": "decimal"
    },
    "length_cm": {
      "type": "decimal"
    },
    "width_cm": {
      "type": "decimal"
    },
    "height_cm": {
      "type": "decimal"
    }
  }
}
